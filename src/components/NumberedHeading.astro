---

interface Props {
  number: string;
  title: string;
}

const { number, title } = Astro.props;
---

<h2 class="flex items-center font-heading text-3xl text-primary mb-12">
  <span class="text-pacific font-mono mr-2">{number}</span>
  <span>{title}</span>
  <span class="ml-4 w-full h-[1px] max-w-[300px] bg-border hidden md:block"></span>
</h2>