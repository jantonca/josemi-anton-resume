---
import { socialLinksContent } from '@/content/socialLinksContent'
import { Icon } from 'astro-icon/components'

const socialLinks = socialLinksContent.socialLinks

const githubLink = socialLinks.find(
  (link: { name: string }) => link.name === 'github'
)
---

<div
  class='flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-muted-foreground'
>
  <div class='flex items-center gap-2'>
    <span class='font-mono'>© 2024</span>
    <span class='h-1 w-1 rounded-full bg-pacific'></span>
    Built with <span class='text-pacific'>♥</span> & <Icon
      name='astro'
      class='h-5 w-5'
    /> by Josemi Anton
  </div>
  <div class='flex items-center gap-4'>
    {
      githubLink && (
        <a
          href={`${githubLink.url}/josemi-anton-resume`}
          class='hover:text-pacific transition-colors duration-300 flex items-center gap-2'
          target='_blank'
          rel='noopener noreferrer'
        >
          <span>View this project on</span>
          <Icon
            name='github'
            class='h-5 w-5'
          />
        </a>
      )
    }
  </div>
</div>
