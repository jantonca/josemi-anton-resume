# .env.example - Copy to .env and fill in your values

# Cloudflare Account ID (from dashboard)
# Find at: Dashboard > Account Home > Account ID (right sidebar)
CLOUDFLARE_ACCOUNT_ID=your-account-id-here
# Legacy variable name (still supported)
CF_ACCOUNT_ID=your-account-id-here

# R2 API Credentials
# Get these from: Dashboard > R2 > Manage R2 API Tokens > Create API Token
# Select "Object Read & Write" permissions for your bucket
CLOUDFLARE_ACCESS_KEY_ID=your-access-key-id
CLOUDFLARE_SECRET_ACCESS_KEY=your-secret-access-key
# Legacy variable names (still supported)
R2_ACCESS_KEY_ID=your-access-key-id
R2_SECRET_ACCESS_KEY=your-secret-access-key

# R2 Bucket Configuration
R2_BUCKET_NAME=your-bucket-name
# Public URL for your CDN (e.g., https://cdn.yourdomain.com)
R2_PUBLIC_URL=https://cdn.yourdomain.com

# Upload endpoint secret (optional - for API uploads)
UPLOAD_SECRET=your-secure-upload-secret-here

# Environment
NODE_ENV=development
